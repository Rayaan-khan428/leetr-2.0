{
  "manifest_version": 3,
  "name": "Leetr",
  "version": "1.0",
  "description": "Track LeetCode problems with complexity and solutions",
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.leetcode.com/*"
    ],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}
